pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/sebasarias17/To-Do-App-Fork.git'
        DOCKER_COMPOSE_PATH = './app/docker-compose.yml'
        IMAGE_TAG = 'v1.0.0' // Aquí defines el tag que quieres usar
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    // Construir las imágenes Docker definidas en tu docker-compose.yml
                    sh "docker-compose -f ${DOCKER_COMPOSE_PATH} build"

                    // Etiquetar la imagen construida con el tag definido
                    sh "docker tag yourusername/yourimage:latest yourusername/yourimage:${IMAGE_TAG}"
                }
            }
        }

        stage('Push Docker Image') { // Opcional, si necesitas enviar la imagen a un registro
            steps {
                script {
                    // Pushear la imagen al registro Docker
                    sh "docker push yourusername/yourimage:${IMAGE_TAG}"
                }
            }
        }
    }

    post {
        success {
            echo 'Build and Deployment successful!'
        }
        failure {
            echo 'Build or Deployment failed!'
        }
    }
}
