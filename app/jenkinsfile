pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/sebasarias17/To-Do-App-Fork.git'
        DOCKER_COMPOSE_PATH = './app/docker-compose.yml'
        IMAGE_NAME = 'to-do-app' // Nombre base de la imagen
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Generate Tag') {
            steps {
                script {
                    // Generar un tag basado en la fecha y hora actual
                    def currentDate = new Date().format('yyyyMMdd-HHmmss')
                    env.TAG = currentDate
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    // Construir la imagen Docker usando el tag generado
                    sh "docker-compose -f ${DOCKER_COMPOSE_PATH} build --build-arg TAG=${TAG}"

                    // Etiquetar la imagen construida con el nombre base y el tag generado
                    sh "docker tag ${IMAGE_NAME}:latest ${IMAGE_NAME}:${TAG}"
                }
            }
        }

        stage('Push Docker Image') { // Opcional, si necesitas enviar la imagen a un registro
            steps {
                script {
                    // Pushear la imagen al registro Docker con el nuevo tag
                    sh "docker push ${IMAGE_NAME}:${TAG}"
                }
            }
        }
    }

    post {
        success {
            echo 'Build and Deployment successful!'
        }
        failure {
            echo 'Build or Deployment failed!'
        }
    }
}
